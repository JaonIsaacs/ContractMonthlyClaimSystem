<Window x:Class="ContractMonthlyClaimSystem.ViewClaimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View a Claim" Height="300" Width="400">
	<Grid>
		<StackPanel Margin="10">
			<TextBlock Text="Submitted Claims:" Margin="0,0,0,5"/>
			<ListBox Name="ClaimsListBox" Height="200"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
				<Button Name="ApproveButton" Content="Approve" Width="100" Margin="5" Click="ApproveButton_Click"/>
				<Button Name="DeclineButton" Content="Decline" Width="100" Margin="5" Click="DeclineButton_Click"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
